{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "mentoring-adf-ada"
		},
		"AzureBlobStorageAu_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorageAu'"
		},
		"AzureSqlDatabase_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabase'",
			"defaultValue": "Integrated Security=False;Encrypt=True;Connection Timeout=30;Data Source=azure-mentoring-ad.database.windows.net;Initial Catalog=movies;User ID=adfdaniyar"
		},
		"Cinema Tickets_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Cinema Tickets'"
		},
		"Online_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'Online'"
		},
		"OnlineDataLake_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'OnlineDataLake'"
		},
		"AzureBlobStorage1_properties_typeProperties_sasUri_secretName": {
			"type": "string",
			"defaultValue": "SASURI"
		},
		"AzureDataLakeStorage1_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://azurementoringdatalakead.dfs.core.windows.net"
		},
		"AzureKeyVault1_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://mentoring-key-vault-ad.vault.azure.net/"
		},
		"DataMart_properties_typeProperties_connectionString_secretName": {
			"type": "string",
			"defaultValue": "DataMart"
		},
		"OnlineDataLake_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://azurementoringdatalakead.dfs.core.windows.net/"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "mentoring-adf-ada_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureBlobStorageAu_connectionString": {
						"value": "[parameters('AzureBlobStorageAu_connectionString')]"
					},
					"Cinema Tickets_connectionString": {
						"value": "[parameters('Cinema Tickets_connectionString')]"
					},
					"AzureDataLakeStorage1_properties_typeProperties_url": {
						"value": "[parameters('AzureDataLakeStorage1_properties_typeProperties_url')]"
					},
					"AzureKeyVault1_properties_typeProperties_baseUrl": {
						"value": "[parameters('AzureKeyVault1_properties_typeProperties_baseUrl')]"
					},
					"AzureBlobStorage1_properties_typeProperties_sasUri_secretName": {
						"value": "[parameters('AzureBlobStorage1_properties_typeProperties_sasUri_secretName')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "mentoring-adf-ada_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureSqlDatabase_connectionString": {
						"value": "[parameters('AzureSqlDatabase_connectionString')]"
					},
					"Online_connectionString": {
						"value": "[parameters('Online_connectionString')]"
					},
					"OnlineDataLake_accountKey": {
						"value": "[parameters('OnlineDataLake_accountKey')]"
					},
					"DataMart_properties_typeProperties_connectionString_secretName": {
						"value": "[parameters('DataMart_properties_typeProperties_connectionString_secretName')]"
					},
					"OnlineDataLake_properties_typeProperties_url": {
						"value": "[parameters('OnlineDataLake_properties_typeProperties_url')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'mentoring-adf-ada_ArmTemplate_0')]"
			]
		},
		{
			"name": "mentoring-adf-ada_ArmTemplate_2",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_2.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'mentoring-adf-ada_ArmTemplate_1')]"
			]
		}
	]
}